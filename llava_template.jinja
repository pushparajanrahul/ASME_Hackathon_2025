{%- for message in messages %}
    {%- if message['role'] == 'system' %}
        {{- message['content'] + '\n' -}}
    {%- elif message['role'] == 'user' %}
        {{- 'USER: ' + message['content'] + '\n' -}}
    {%- elif message['role'] == 'assistant' %}
        {{- 'ASSISTANT: ' + message['content'] + '</s>\n' -}}
    {%- endif %}
{%- endfor %}